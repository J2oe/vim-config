set number
set ruler
syntax on
filetype on
filetype plugin on
filetype plugin indent on

set formatoptions=tcrqn
set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=80
set expandtab

set showmatch
set matchtime=5
set incsearch

set mouse=a
set selection=exclusive
set selectmode=mouse,key
